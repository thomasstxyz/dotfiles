# sxhkdrc

# basic programs
super + e
	thunar
#super + shift + h
#	$TERMINAL -e htop
super + m
	$TERMINAL -e neomutt
super + n
	$TERMINAL -e newsboat
#super + c
#	$TERMINAL -e calcurse
super + shift + c
	$TERMINAL -e python
super + shift + a
	$TERMINAL -e pulsemixer
super + r
	$TERMINAL -e ranger
super + shift + v
	$TERMINAL -e $EDITOR
super + w
	$BROWSER
super + shift + Return
	samedir

#
super + shift + p
        passmenu

alt + space
        rofi -show run

#super + Tab
#        rofi -show window

# up/down left/right arrows -> map to vim keys
ctrl + alt + j
        xdotool keyup j key --clearmodifiers Down
ctrl + alt + k
        xdotool keyup k key --clearmodifiers Up
ctrl + alt + h
        xdotool keyup h key --clearmodifiers Left
ctrl + alt + l
        xdotool keyup l key --clearmodifiers Right

# lock screen
super + alt + l
#super + alt + x
        sleep 1 && xset dpms force off
        #slock

# toggle screensaver on/off
super + alt + shift + l
#super + alt + ctrl + x
        togglescreensaver && pkill -RTMIN+24 dwmblocks

# toggle different keyboard layout
super + alt + space
        togglekblayout && pkill -RTMIN+23 dwmblocks

# XF86 buttons
XF86Launch1
	xset dpms force off
XF86TouchpadToggle
	(synclient | grep "TouchpadOff.*1" && synclient TouchpadOff=0) || synclient TouchpadOff=1
XF86Touchpad{Off,On}
	synclient TouchpadOff={1,0}
XF86MonBrightnessDown
	xbacklight -dec 15
XF86MonBrightnessUp
	xbacklight -inc 15

# Recording
# Take screenshot
Print
        maim -s | xclip -selection clipboard -t image/png
# Pick screenshot type
shift + Print
	maimpick
# full screenshot and save
super + Print
	maim pic-full-$(date '+%y%m%d-%H%M-%S').png

# pick emoji and copy to clipboard
super + grave
        dmenuunicode

# display what you type on the screen
super + Scroll_Lock
	killall screenkey || screenkey
# on second monitor
super + Scroll_Lock
	killall screenkey || screenkey --scr 1

# Pause audio
#super + u
#	mpc toggle
#super + shift + u
#	mpc pause; pauseallmpv
## Changes to next/previous tracks
#super + {comma,period}
#	mpc {prev,next}
# Restart track
super + shift + less
	mpc seek 0%
# Seek foward in song
super + {_,shift +} bracketright
	mpc seek +{10,120}
# Seek backward in song
super + {_,shift +} bracketleft
	mpc seek -{10,120}

# Increase volume
super + {equal,plus}
	amixer sset Master {5,15}%+; pkill -RTMIN+10 blocks
# Decrease volume
super {_,shift +} + minus
	amixer sset Master {5,15}%-; pkill -RTMIN+10 blocks
super + shift + m
	amixer sset Master toggle; pkill -RTMIN+10 blocks

# Audiokeys
XF86AudioMute
	amixer sset Master toggle; pkill -RTMIN+10 blocks
XF86Audio{Raise,Lower}Volume
	amixer sset Master 5%{+,-}; pkill -RTMIN+10 blocks
XF86Audio{Next,Prev}
	mpc {next,prev}
XF86Audio{Pause,Play,Stop}
	mpc {pause,play,stop}
XF86Audio{Rewind,Forward}
	mpc seek {-,+}10
XF86AudioRecord
	dmenurecord
XF86AudioMedia
	$TERMINAL -e ncmpcpp

XF86PowerOff
	prompt "Shutdown computer?" "sudo -A shutdown -h now"
XF86Calculator
	$TERMINAL -e bc
XF86Sleep
	prompt 'Hibernate computer?' 'sudo -A zzz'
XF86WWW
	$BROWSER
XF86DOS
	$TERMINAL
XF86ScreenSaver
        togglescreensaver && pkill -RTMIN+24 dwmblocks
	#mpc pause; pauseallmpv; i3lock -e -f -c 1d2021; xset dpms force off
        #slock & xset dpms force off; mpc pause; pauseallmpv
XF86TaskPane
	$TERMINAL -e htop
XF86Mail
	$TERMINAL -e neomutt
XF86MyComputer
	$TERMINAL -e $FILE /

# change display config
super + alt + F1
        dpconfig int
super + alt + F2
        dpconfig ext
super + alt + F3
        dpconfig auto

# power management
super + F4
        sysact
	#promptyesno "suspend computer?" "systemctl suspend"

super + F5
        notify-send "testing 1, 2, 3, .." "dere"

# Mount a USB drive or Android device
super + {F9,F10}
	{dmenumount,dmenuumount}
